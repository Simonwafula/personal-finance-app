# Production Environment Variables
# Copy this to .env.production and fill in your values

# Django Core
DJANGO_SECRET_KEY=your-super-secret-key-change-this
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=finance.mstatilitechnologies.com,www.finance.mstatilitechnologies.com,localhost,127.0.0.1

# CORS & CSRF
CORS_ALLOWED_ORIGINS=https://finance.mstatilitechnologies.com,https://www.finance.mstatilitechnologies.com,http://localhost
CSRF_TRUSTED_ORIGINS=https://finance.mstatilitechnologies.com,https://www.finance.mstatilitechnologies.com,http://localhost

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
SOCIALACCOUNT_LOGIN_REDIRECT_URL=https://finance.mstatilitechnologies.com/oauth-callback

# Email (optional)
