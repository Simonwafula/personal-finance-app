# Local Development Environment
SECRET_KEY=dev-secret-key-for-local-testing-only
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Use SQLite for local development (comment out DATABASE_ENGINE)
# DATABASE_ENGINE is not set, so SQLite will be used

# Email (console backend in debug mode)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Cookie settings for localhost
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax

# CORS/CSRF for localhost
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Social / OAuth (use dev credentials or leave empty)
SOCIALACCOUNT_LOGIN_REDIRECT_URL=http://localhost:5173/oauth-callback
